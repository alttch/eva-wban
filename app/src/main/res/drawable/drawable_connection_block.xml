<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_red" />
            <corners
                android:bottomLeftRadius="@dimen/space_4dp"
                android:bottomRightRadius="@dimen/space_4dp"
                android:topLeftRadius="@dimen/space_4dp"
                android:topRightRadius="@dimen/space_4dp" />

            <stroke
                android:width="@dimen/space_1dp"
                android:color="@color/app_blue" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/space_3dp"
        android:left="@dimen/space_3dp"
        android:right="@dimen/space_3dp"
        android:top="@dimen/space_3dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/app_blue" />
            <corners
                android:bottomLeftRadius="@dimen/space_4dp"
                android:bottomRightRadius="@dimen/space_4dp"
                android:topLeftRadius="@dimen/space_4dp"
                android:topRightRadius="@dimen/space_4dp" />
        </shape>

    </item>

</layer-list>